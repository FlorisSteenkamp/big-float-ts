    "version": "3.0.0",
    "type": "module",
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "author": {
        "name": "Floris Steenkamp"
    },
    "private": false,
    "license": "MIT",
    "exports": "./node/index.js",
    "directories": {
        "test": "test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FlorisSteenkamp/big-float.git"
    },
    "keywords": [
        "floating point",
        "infinite precision",
        "adaptive",
        "Shewchuk",
        "expansion"
    ],
    "bugs": {
        "url": "https://github.com/FlorisSteenkamp/big-float/issues"
    },
    "dependencies": {},
    "devDependencies": {
        "resolve-typescript-plugin": "^1.1.1",
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.6",
        "chai": "^4.3.4",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.20",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4",
        "webpack": "^5.60.0",
        "webpack-cli": "^4.9.1"
    },
    "scripts": {
